@model IEnumerable<BiggerBasket.Models.Cart>



@{
    ViewData["Title"] = "CartView";
    Layout = "CartLayout";
}

<h1>CartView</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
    

<table class="table">
    @if (Model.Count() == 0)
        {
            <form asp-controller="Customer" asp-action="CustomerView">
                 <div class="form-group">
                     <h4 style="text-align:center">your Cart is Empty</h4><br>
                    <input style="text-align:cente" type="submit" value="Go To Shopping" class="btn btn-primary" />
                </div>
                </form>
        }
     else{
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Product) 
                    </th>
                    <th>
                       @* @Html.DisplayNameFor(model => model.ProductQuantity)*@
                       Product Quantity
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customer)
                    </th>
            
                    <th></th>
                </tr>
            </thead>
            <tbody>
        
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                
           
                    </td>
            
                 

            
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CartId">Edit</a> |
                        <a  asp-action="Delete" asp-route-id="@item.CartId">Delete</a>
                    </td>
                </tr>
                    }
            
            </tbody>
            <form asp-controller="Order" asp-action="ProceedToBuy">
            
                         <div class="form-group">
                            <input  type="submit" value="Buy" class="btn btn-primary" />
                        </div>

                </form>
        }
        <a asp-controller="Customer" asp-action="CustomerView">Back</a>
</table>

