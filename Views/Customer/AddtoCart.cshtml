@model BiggerBasket.Models.Cart

@{
    ViewData["Title"] = "AddtoCart";
}

<h1>Add to Cart</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddtoCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label" hidden></label>
                <input asp-for="ProductId" class ="form-control" value=@ViewBag.ProductId type="hidden"/>
            </div>
            
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label">Product Quantity</label>
                <input asp-for="ProductQuantity" class="form-control" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CustomerView">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}