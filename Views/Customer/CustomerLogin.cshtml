@model BiggerBasket.Models.Customer

@{
    ViewData["Title"] = "CustomerLogin";
    Layout = "CustomerLayout";
}

<h1>Customer Login</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CustomerLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label">Customer Email</label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="CustomerPassword" class="control-label">Customer Password</label>
                <input type="password" asp-for="CustomerPassword" class="form-control" />
                <span asp-validation-for="CustomerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
