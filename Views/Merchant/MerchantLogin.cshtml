@model BiggerBasket.Models.Merchant

@{
    ViewData["Title"] = "MerchantLogin";
    Layout = "MerchantLayout";
}

<h1>Merchant Login</h1>



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MerchantLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MerchantEmail" class="control-label">Merchant Email</label>
                <input asp-for="MerchantEmail" class="form-control" />
                <span asp-validation-for="MerchantEmail" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="MerchantPassword" class="control-label">Merchant Password</label>
                <input type="password" asp-for="MerchantPassword" class="form-control" />
                <span asp-validation-for="MerchantPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
